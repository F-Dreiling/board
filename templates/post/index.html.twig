{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of all posts</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
